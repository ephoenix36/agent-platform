# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Database - PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=agent_platform
DATABASE_URL=postgresql://admin:admin123@localhost:5432/agent_platform

# Database - MongoDB
MONGO_USER=admin
MONGO_PASSWORD=admin123
MONGO_DB=agent_platform
MONGO_URL=mongodb://admin:admin123@localhost:27017

# Cache - Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Message Queue - RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Storage - MinIO/S3
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=agent-platform
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# LLM Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Payment Gateway
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Voice Services
DEEPGRAM_API_KEY=
ELEVENLABS_API_KEY=

# Monitoring & Logging
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_VOICE_ASSISTANT=true
ENABLE_MARKETPLACE=true
ENABLE_COMMUNITIES=true
ENABLE_STREAMING_UI=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Sandbox Configuration
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MEMORY_LIMIT=512M
SANDBOX_CPU_QUOTA=50000

# Free Tier Limits
FREE_TIER_MAX_AGENTS=3
FREE_TIER_MAX_EXECUTIONS_PER_DAY=100
FREE_TIER_MAX_TOKENS_PER_DAY=10000
