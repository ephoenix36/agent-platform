{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": "*.{json,jsonc}",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "*.py",
      "options": {
        "printWidth": 100,
        "tabWidth": 4
      }
    }
  ]
}
