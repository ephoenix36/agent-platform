# Voice Control MCP Server Configuration

# Default model for command parsing (Grok 4 Fast is recommended for speed/cost balance)
DEFAULT_MODEL=grok-4-fast

# Safety settings
REQUIRE_CONFIRMATION=true  # Require user confirmation for dangerous operations
MAX_FILE_SIZE_MB=100       # Maximum file size for operations
RATE_LIMIT_SECONDS=1       # Minimum seconds between commands

# Voice recognition (optional - for cloud speech services)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_SPEECH_KEY_PATH=/path/to/credentials.json

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Sampling configuration
MCP_SAMPLING_TEMPERATURE=0.3  # Lower for more deterministic commands
MCP_SAMPLING_MAX_TOKENS=500   # Commands don't need long responses
MCP_SAMPLING_TIMEOUT=10       # Faster timeout for quick responses
